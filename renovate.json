{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "ansible/roles/nginx_build/vars/main.yml"
      ],
      "matchStrings": [
        "nginx_build_version: \"(?<currentValue>.*)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "nginx-build/nginx-build"
    }
  ]
}
